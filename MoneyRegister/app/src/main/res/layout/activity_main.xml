<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lg.moneyregister.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/container"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#202020"
                android:textColor="#FFFFFF"
                android:text="리스트"
                android:id="@+id/listBtn"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#000000"
                android:textColor="#FFFFFF"
                android:text="달력"
                android:id="@+id/calendarBtn"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#000000"
                android:textColor="#FFFFFF"
                android:text="카테고리"
                android:id="@+id/statisticBtn"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#000000"
                android:textColor="#FFFFFF"
                android:text="설정"
                android:id="@+id/settingBtn"/>
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="70dp"
        android:layout_marginStart="20dp"
        android:background="#90FFFFFF"
        android:alpha="0.5"
        android:id="@+id/curStatus">
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="5dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minWidth="110dp"
                    android:textColor="#000000"
                    android:text="다음 용돈 날짜"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minWidth="80dp"
                    android:id="@+id/depositDateTv"
                    android:textColor="#000000"
                    android:text="x월 x일"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minWidth="110dp"
                    android:textColor="#000000"
                    android:text="다음 용돈까지 남은 날짜"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minWidth="80dp"
                    android:id="@+id/leftDaysTv"
                    android:textColor="#000000"
                    android:text="x일"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minWidth="110dp"
                    android:textColor="#000000"
                    android:text="남은돈"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minWidth="80dp"
                    android:id="@+id/balanceTv"
                    android:textColor="#000000"
                    android:text="0원"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minWidth="110dp"
                    android:textColor="#000000"
                    android:text="하루 예산"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minWidth="80dp"
                    android:id="@+id/planPerDateTv"
                    android:textColor="#000000"
                    android:text="0원"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="70dp"
        android:id="@+id/addBtn"
        android:src="@drawable/floating_action_button_insert"
        android:layout_gravity="right|bottom"/>
</FrameLayout>
